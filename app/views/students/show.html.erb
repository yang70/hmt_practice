<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Courses</strong>
</p>

<% @student.enrollments.each do |enrollment| %>
  <p><%= link_to enrollment.course.name, enrollment.course %> | Grade: <%= enrollment.grade %></p>
<% end %>

<p>
  <%= link_to 'Edit', edit_student_path(@student) %> |
  <%= link_to 'Back', students_path %>
</p>
